<%= name %>.Helpers.Application =

  # Connection Detection
  hasConnection: ->
    Ti.Network.networkType != Ti.Network.NETWORK_NONE
    
  # Connection Alert
  displayConnectionAlertDialog: ->
    if !hasConnection
      connectionAlert = Ti.UI.createAlertDialog
        title:        'Warning'
        message:      'Your device is not currently online.'
        buttonNames:  ['OK']
      connectionAlert.show()
  
  titleize: (string) ->
    string.charAt(0).toUpperCase() + string.slice(1)
    
  createOrientiationModes: ->
    modes = [
      Titanium.UI.PORTRAIT
      Titanium.UI.UPSIDE_PORTRAIT
      Titanium.UI.LANDSCAPE_LEFT
      Titanium.UI.LANDSCAPE_RIGHT
    ]
    modes

  createWindowTitleLabel: (options) ->
    windowTitle = Ti.UI.createLabel
      className: 'windowTitleLabel'
      text: options.title
    windowTitle
  
  genericWindowTitle: (options) ->
    window      = Ti.UI.createWindow(options.params)
    windowTitle = $.Helpers.Application.createWindowTitleLabel
      title: options.title
    window.setTitleControl(windowTitle)
    window.barColor = '#000'
    window
  
  genericIndicator: (options) ->
    indicator     = Ti.UI.createActivityIndicator
      className:   'indicator'
      style:        options.style
    indicator
  
  genericAlertBox: (message) ->
    alertBox      = Ti.UI.createAlertDialog
      title:        message
      buttonNames:  ['OK']
      cancel:       3
    alertBox.show()
    
