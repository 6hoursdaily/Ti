#!/usr/bin/env ruby

require 'ti'
options = ::Ti::Options.parse(ARGV)

# Create a new project
if options.name
  Ti::Generate::Project.create(options.name, options.device_id, (options.platform || 'iphone'))
  puts "Generating a new Ti Project named #{options.name}"
end

